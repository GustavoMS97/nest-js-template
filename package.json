{
  "name": "nest-js-template",
  "version": "0.1.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "husky",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "dev": "nest start --watch",
    "dev:docker": "docker compose up -d",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:base": "node --max-old-space-size=8192 node_modules/.bin/jest --runInBand",
    "test": "yarn run migration:run && yarn test:base --config=./test/jest.config.ts",
    "test:e2e": "yarn run migration:run && yarn test:base --config=./test/jest-e2e.config.ts",
    "test:unit": "yarn test:base --config=./test/jest-unit.config.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "migration:run": "yarn typeorm migration:run -d ./src/@config/typeorm-cli.config.ts",
    "migration:create": "yarn typeorm migration:create ./src/@migrations/$npm_config_name",
    "migration:revert": "yarn typeorm -d ./src/@config/typeorm-cli.config.ts migration:revert"
  },
  "dependencies": {
    "@google-cloud/logging-winston": "6.0.0",
    "@nestjs/axios": "4.0.0",
    "@nestjs/common": "11.0.8",
    "@nestjs/config": "4.0.0",
    "@nestjs/core": "11.0.8",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.0.8",
    "@nestjs/swagger": "11.0.3",
    "@nestjs/typeorm": "11.0.0",
    "axios": "1.7.9",
    "bcrypt": "5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "date-fns": "4.1.0",
    "date-fns-tz": "3.2.0",
    "dotenv": "16.4.7",
    "mysql2": "3.12.0",
    "nest-winston": "1.10.2",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "randomstring": "1.3.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1",
    "typeorm": "0.3.20",
    "uuid": "11.0.5",
    "winston": "3.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "@nestjs/cli": "11.0.2",
    "@nestjs/schematics": "11.0.0",
    "@nestjs/testing": "11.0.8",
    "@types/bcrypt": "5.0.2",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.1",
    "@types/passport-jwt": "4.0.1",
    "@types/randomstring": "1.3.0",
    "@types/supertest": "6.0.2",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "8.23.0",
    "@typescript-eslint/parser": "8.23.0",
    "core-js": "3.40.0",
    "eslint": "9.19.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.2.3",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-matcher-specific-error": "1.0.0",
    "prettier": "3.4.2",
    "pretty-quick": "4.0.0",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.3"
  }
